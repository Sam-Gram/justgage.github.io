<div class="post">
    <h1>
        {{#single}}
        {{post.title}}
        {{/single}}
        {{^single}}
        <a href="{{{url}}}/{{{config.posts_dir}}}/{{{post.link}}}">
            {{post.title}}
        </a>
        {{/single}}
    </h1>
    <div class="content">

        {{#post.excerpt}}
            {{^single}}
                {{{post.excerpt}}}
                <a href="{{{url}}}/{{{config.posts_dir}}}/{{{post.link}}}#more">Read more &rarr;</a>
            {{/single}}
            {{#single}}
                {{{post.content}}}
            {{/single}}
        {{/post.excerpt}}

        {{^post.excerpt}}
            {{{post.content}}}
        {{/post.excerpt}}
    </div>
    <div class="meta">
        {{#format_date}}{{post.time}}{{/format_date}}
    </div>
</div>
